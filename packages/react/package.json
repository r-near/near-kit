  },
  "keywords": [
    "near",
    "near-protocol",
    "blockchain",
    "react",
    "hooks",
    "web3"
  ],
  "license": "MIT",
  "peerDependencies": {
    "near-kit": ">=0.8.0",
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@testing-library/react": "^16.2.0",
    "@types/react": "^19.0.0",
    "jsdom": "^26.0.0",
    "near-kit": "^0.8.1",
    "react": "^19.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.10"
  }
}
