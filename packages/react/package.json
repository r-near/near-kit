{
  "name": "@near-kit/react",
  "version": "0.11.0",
  "description": "React bindings for near-kit - hooks and providers for NEAR Protocol",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "lint": "biome check . --write",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "near",
    "near-protocol",
    "blockchain",
    "react",
    "hooks",
    "web3"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/r-near/near-kit",
    "directory": "packages/react"
  },
  "dependencies": {
    "near-kit": "workspace:*"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.1",
    "@testing-library/react": "^16.2.0",
    "@types/react": "^19.2.14",
    "jsdom": "^28.1.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
